<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wait for the measurements...."
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/label_margin_wide"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/refreshIotValue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dashboard_icon_margin"
        android:layout_marginBottom="@dimen/dashboard_icon_margin"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_iot_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120 / 80"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dashboard_icon_margin"
        android:layout_marginBottom="@dimen/dashboard_icon_margin"
        android:textStyle="bold"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnSaveAndBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save"
        android:layout_marginTop="@dimen/label_margin_wide"
        android:paddingHorizontal="@dimen/custom_fab_standard_21"/>
</LinearLayout>