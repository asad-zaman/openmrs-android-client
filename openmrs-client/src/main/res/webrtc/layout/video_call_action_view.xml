<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCallEnd"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:contentDescription="@string/video_call"
            android:minWidth="@dimen/video_call_action_btn_min_size"
            android:src="@drawable/ic_call_end"
            app:backgroundTint="@color/red"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/btnMicOnOff"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/white"
            app:tint="@null" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMicOnOff"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorRtcBtn"
            android:contentDescription="@string/toggle_mic"
            android:minWidth="@dimen/video_call_action_btn_min_size"
            android:src="@drawable/selector_mic"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/btnVideoOnOff"
            app:layout_constraintStart_toEndOf="@id/btnCallEnd"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/darkGray"
            app:tint="@null" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnFlipCamera"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorRtcBtn"
            android:contentDescription="@string/flip_camera"
            android:minWidth="@dimen/video_call_action_btn_min_size"
            android:src="@drawable/ic_flip_camera"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnVideoOnOff"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/darkGray"
            app:tint="@null" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnVideoOnOff"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="@color/colorRtcBtn"
            android:contentDescription="@string/video_call"
            android:minWidth="@dimen/video_call_action_btn_min_size"
            android:src="@drawable/selector_video_call"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/btnFlipCamera"
            app:layout_constraintStart_toEndOf="@id/btnMicOnOff"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/darkGray"
            app:tint="@null" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>